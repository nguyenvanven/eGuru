
    <%= form_for :session, url: session_path, :html => {:class => 'form-signin'} do |form| %>
      <div class="form-group row">
        <%= form.label :email, class:"col-sm-3" %>
        <%= form.text_field :email, type: 'email', class:"col-sm-8", placeholder:"Email address ..." %>
      </div>

      <div class="form-group row">
        <%= form.label :password, class:"col-sm-3" %>
        <%= form.password_field :password, class:"col-sm-8", placeholder:"Password ..." %>
      </div>

      <div class="form-group row">
        <%= link_to t(".forgot_password"), new_password_path, class:"col-sm-4 offset-sm-3 forgot-password" %>
      </div>

      <div class="form-group row">
        <%= form.submit "Singin",  class:"btn btn-primary col-sm-2 offset-sm-3" %>
        <% if Clearance.configuration.allow_sign_up? %>
          <%= link_to t(".sign_up"), sign_up_path, class:"col-sm-4" %>
        <% end %>
      </div>
      <div class="form-group row">
        <a class="btn btn-social btn-facebook col-sm-6" href="/auth/facebook">
          <span class="fa fa-facebook">
          </span>
          Sign in Facebook
        </a>
      </div>
    <% end %>
